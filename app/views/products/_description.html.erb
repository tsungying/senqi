<div class="tabs-single">
  <div class="container">

    <div id="tabs">
      <ul>
        <li class="active"><a href="#tabs-1"><%= t('products.description') %></a></li>
      </ul>

      <div class="tab-border"></div>

      <div id="tabs-1">
        <div class="row">

          <% @product.pictures.where(section: "product_description").each do |picture| %>
            <div class="col-md-12 col-sm-12 col-xs-12">
              <%= image_tag picture.img_url, class: "img-responsive"%><br/>
            </div>                
          <% end %>

        </div> <!-- class="row" -->
      </div>
        
    </div>

  </div>
</div>