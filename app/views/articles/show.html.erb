	$(document).ready(function(){
		$(".move_to_comments").click(function(){
			$("html , body").animate({scrollTop:$("#comments").offset().top}, 800);
		})

		var section = '<%= params[:section] %>'
		if(section)
		$("html , body").animate({scrollTop:$("#"+section).offset().top}, 800);
	});
