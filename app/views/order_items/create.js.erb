<% if @cart.errors.any? || @order_item.errors.any? %>
	alert("<%= @order_item.errors[:product][0] %>")
	// alert('加入購物車失敗~"~')
<% else %>
  $("div .cart").html("<%= escape_javascript(render 'layouts/cart_text') %>")
  $("div .mobile-version").html("<%= escape_javascript(render 'layouts/shared/mobile_version_cart') %>")
  $("div.cart-items").text(<%= current_cart.order_items.sum(:quantity) %>)
<% end %>