<div class="box-body">

  <%= render 'admin/shared/error_messages', object: object %>          

  <div class="form-group">
    <%= f.label :name, "分類名稱" %>
    <%=f.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag "設定文章語言" %>
    <div class="radio">          
      <label>             
      <%= f.radio_button :language, "zh-TW" %>
      <%= f.label :language, "中文", value: "zh-TW" %>
      </label>  
    </div>
    <div class="radio">  
      <label> 
      <%= f.radio_button :language, "en" %>
      <%= f.label :language, "英文", value: "en" %>
      </label>
    </div>
  </div> 

</div>