<% breadcrumb :single_product_category, @prod_category %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">

        <div class="box-header with-border">
          <%= link_to new_admin_prod_category_product_path(@prod_category), class: "btn btn-danger btn-sm" do %>
            <li class="fa fa-fw fa-plus-square"></li> 建立新商品
          <% end %>
          <%= link_to "返回上一頁", :back, class: "btn btn-primary btn-sm" %>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>首頁產品圖</th>
              <th>商品名稱</th>
              <th>商品狀態</th>
              <th>商品編號</th>
              <th>原價</th>
              <th>售價</th>              
              <th>更新時間</th>
              <th>建立時間</th>
              <th>管理</th>
            </tr>
            
            <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td>
                <%= link_to [:admin, product.prod_category, product] do %>
                  <%= image_tag product.home_image_url, class: "img-thumbnail", width: "100", height: 'auto' %>
                <% end %>
              </td>              
              <td><%= link_to product.name, admin_prod_category_product_path(product.prod_category, product) %></td>
              <td><%= product.active? ? "販售中" : "已下架" %></td>
              <td><%= product.part_number %></td>
              <td><%= product.original_price %></td>
              <td><%= product.selling_price %></td>
              <td><%= l(product.updated_at, format: :long) %></td>
              <td><%= l(product.created_at, format: :long) %></td>              
              <td>
              <%= link_to "編輯", edit_admin_prod_category_product_path(product.prod_category, product) %>
              <%= link_to "刪除", [:admin, product.prod_category, product], method: :delete, data: { confirm: "確定刪除這個商品嗎？" } %>
              </td>
            </tr>
            <% end %>
            

            <!--
              <td><span class="label label-success">Approved</span></td>
              <td><span class="label label-warning">Pending</span></td>
              <td><span class="label label-primary">Approved</span></td>
              <td><span class="label label-danger">Denied</span></td>
            -->
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  </div>
<!-- @categories -->
</section>