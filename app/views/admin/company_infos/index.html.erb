<section class="content">
  <div class="row">
    <!-- 辦公室照片 -->
    <div class="col-xs-12">
      <%= link_to new_admin_company_info_path, class: "btn btn-danger btn-sm" do %>
        <li class="fa fa-fw fa-plus-square"></li> 新增
      <% end %>

      <% @company_infos.each do |language, company_infos| %>
      <div class="box">

        <div class="box-header with-border">語言：<%= translate_language_name(language) %></div>

        <div class="box-body table-responsive no-padding">

          <table class="table table-hover">
            <thead>
              <tr>
                <th width="15%">照片</th>
                <th width="15%">標題</th>
                <th width="60%">內容</th>
                <th width="10%">管理</th>
              </tr>
            </thead>

            <tbody>
              <% company_infos.each do |company_info| %>
              <tr>
                <td><%= image_tag(company_info.image.thumb) %></td>
                <td><%= company_info.title %></td>
                <td><%= raw company_info.content %></td>
                <td>
                  <%= link_to "編輯", edit_admin_company_info_path(company_info) %>
                  <%= link_to "刪除", [:admin, company_info], method: :delete, data: {confirm: "Are u sure?"} %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>

        </div><!-- /.box-body -->

      </div><!-- /.box -->
      <% end %>

    </div>
  </div>
</section>
