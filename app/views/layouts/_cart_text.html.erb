<div class="cart">
  <%= link_to carts_path, class: "cartmain" do %>
  <%= t('homepage.section.shopping_cart') %>  /  <%= number_to_currency(current_cart.subtotal, locale: I18n.locale) %> 
  <% end %>
  <div class="card-icon">
    <img src="/images/cart.png" alt="">
    <div class="shop-items"><%= current_cart.order_items.sum(:quantity) %></div>
  </div>
  <div class="hover-cart">

    <% if current_cart.order_items.count > 0 %>
      <% current_cart.order_items.each do |item| %>
        <div class="hover-box">
          <%= image_tag item.product.home_image_url, width: 80, class: "left-hover img-rounded" %>
          <div class="hover-details">
            <p><%= item.product.name %></p>
            <span><%= number_to_currency(item.unit_price, locale: I18n.locale) %></span>
            <div class="quantity"><%= t('cart.item_quantity') %> <%= item.quantity %></div>
          </div>
          <div class="clear"></div>
        </div>
      <% end %>
    <% end %>

    <div class="subtotal">
      <%= t('cart.subtotal') %> <span><%= number_to_currency(current_cart.subtotal, locale: I18n.locale) %></span>
    </div>
    <%= link_to t('cart.view_cart'), carts_path, class: "viewcard" %>

  </div>
</div>