<div class="shop-main container">
  <div class="row">

    <%= render "layouts/shared/account_menu" %>

    <div class="col-md-9">
      <div class="shop-content">
      <div class="title">
        <h1><i class="fa fa-star"></i> Notify <i class="fa fa-star"></i></h1>
        <div class="title-border"></div>
      </div>
      
  		<table class="table table-bordered table-hover">
  			<thead>
  				<tr>
  					<th>Raw post 付款完成通知</th>
  					<th>Hash</th>
  					<th>Verify_mac</th>
  				</tr>
  			</thead>
        <% test_client = Allpay::Client.new(mode: :test) %>
  			<tbody>
  				<% @notification.each do |n| %>
  				<tr>
  					<td><%= r = n.raw_post_data %></td>
            <td><%= params_hash = Rack::Utils.parse_query(r) %></td>

            <td><%= test_client.verify_mac(params_hash) %></td>
  				</tr>
  				<% end %>
  			</tbody>		    								    								    									    		
  		</table>

      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Raw post ATM付款資訊</th>
            <th>Hash</th>
            <th>Verify_mac</th>
          </tr>
        </thead>
        <tbody>
          <% @atmPaymentInfo.each do |n| %>
          <tr>
            <td><%= r = n.raw_post_data %></td>
            <td><%= params_hash = Rack::Utils.parse_query(r) %></td>
            <td><%= test_client.verify_mac(params_hash) %></td>
          </tr>
          <% end %>
        </tbody>                                                                          
      </table>
      
      </div>
    </div>
  </div>
</div>



